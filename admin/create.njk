{% extends "layout.njk" %}

{% block content %}
<div class="salve-revenue"><button>Salvar receita</button></div>
    <div class="card_revenue">
        <p>Criando Receita</p>
        <section>
        <div class="img_revenue_id">
            <p>Imagem da receita</p>
            <input 
            type="file" 
            name="avatar_food" 
            id="avatar_food"
            placeholder="Escolha a imagem">
        </div>
        </section>
        <section>
        <div class="title_revenue_id">
            <p>{{item.title}}</p>
        </div>

        <div class="author_revenue_id">
            <p>{{item.author}}</p>
        </div>

        <div class="topic-ingredients">

            <div class="grid_revenue_id">
                <p class="subtitles_revenue_id">Ingredientes</p>
                <h4>Esconder</h4>
            </div>

            <div class="ingredients">
                <ul>
                    {% for ingredient in item.ingredients %}
                        <li>
                            {{ingredient}}
                        </li>
                    {% endfor %}
                </ul>
            </div>

        </div>

        <div class="topic-preparation">

            <div class="grid_revenue_id">
                <p class="subtitles_revenue_id">Modo de Preparo</p>
                <h4>Esconder</h4>
            </div>

            <div class="preparation">
                <ul>
                    {% for preparation in item.preparations %}
                        <li>
                            {{preparation}}
                        </li>
                    {% endfor %}
                </ul>
            </div>

        </div>

        <div class="topic-information">

            <div class="grid_revenue_id">
                <p class="subtitles_revenue_id">Informações Adicionais</p>
                <h4>Esconder</h4>
            </div>

            <div class="information">
                <p>{{item.informations}}</p>
            </div>

        </div>
        </section>
    </div>

    <script src="scripts.js"></script>

{% endblock %}